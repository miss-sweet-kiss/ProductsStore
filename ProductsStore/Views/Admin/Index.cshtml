@model ProductsStore.Models.ProductsListViewModel

@{
    ViewBag.Title = "Products Store";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Products List</h2>

<div class="table">
    <div class="row">
        <div class="header">Product Name</div>
        <div class="header">Description</div>
        <div class="header">Price</div>
        <div class="header">Creation Date</div>
        <div class="header">Action</div>
    </div>
    @foreach (var item in Model.Products)
    {
        <div class="row">
            <div class="col">@Html.DisplayFor(modelItem => item.Name)</div>
            <div class="col">@Html.DisplayFor(modelItem => item.Description)</div>
            <div class="col">@Html.DisplayFor(modelItem => item.Price).00 $</div>
            <div class="col">@Html.DisplayFor(modelItem => item.CreationDate)</div>
            <div class="col">
                @Html.ActionLink("Edit", "Edit", new {item.Id}) |
                @Html.ActionLink("Delete", "Delete", new { item.Id }, new { onclick = "return confirm('Are you sure you want to delete this record?');" })
            </div>
        </div>
    }
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div>
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("Index", new {page = x}))
</div>